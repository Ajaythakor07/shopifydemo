<div class="site-wrap">
  <div class="site-blocks-cover inner-page" style="background-image: url('{{section.settings.contact_banner | img_url:'master' }}'); background-repeat: no-repeat; background-size: cover; background-position: center" >
    <div class="container">
      <div class="row">
      
      </div>
    </div>
  </div>

    <div class="custom-border-bottom py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0"><a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Contact</strong></div>
        </div>
      </div>
    </div>
    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2 class="h3 mb-3 text-black">{{section.settings.contact_title}}</h2>
          </div>
          <div class="col-md-7">
  
            {% form 'contact' %}
            {% if form.posted_successfully? %} Thank you for your contact {% endif %}
            {{ form.errors | default_errors }}
              
              <div class="p-3 p-lg-5 border">
                <div class="form-group row">
                  <div class="col-md-6">
                    <label class="text-black" for="ContactFormFirstName">First Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="ContactFormFirstName" name="contact[firstname]">
                  </div>
                  <div class="col-md-6">
                    <label  class="text-black" for="ContactFormLastName">Last Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="ContactFormLastName" name="contact[lastname]">
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-12">
                    <label class="text-black" for="ContactFormEmail">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="ContactFormEmail" name="contact[email]" placeholder="">
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-12">
                    <label for="ContactFormSubject" class="text-black">Subject </label>
                    <input type="text" class="form-control" id="ContactFormSubject" name="contact[subject]">
                  </div>
                </div>
  
                <div class="form-group row">
                  <div class="col-md-12">
                    <label for="ContactFormMessage" class="text-black">Message </label>
                    <textarea name="contact[message]" id="ContactFormMessage" cols="30" rows="7" class="form-control"></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-lg-12">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Send">
                  </div>
                </div>
              </div>
            {% endform %}
          </div>
          <div class="col-md-5 ml-auto">
              {% for block in section.blocks %}
              <div class="p-4 border mb-3">
                <span class="d-block text-primary h6 text-uppercase">{{block.settings.country_name}}</span>
                <p class="mb-0">{{block.settings.country_address}}</p>
              </div>
              {% endfor %}           
  
          </div>
        </div>
      </div>
    
  </div>
  
  {% schema %}
  {
    "name": "Contact Details",
    "settings": [
    {
        "type": "image_picker",
        "id":"contact_banner",
        "label":"Banner Image"
    },
      {
        "type": "text",
        "id":"contact_title",
        "label":"Title"
      }
    ],
    "blocks":[
    {
      "name": "Contact details text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id":"country_name",
          "label":"Country Name"
        },
        {
          "type": "text",
          "id":"country_address",
          "label":"Address"
        }
      ]
    }]
  }
  {% endschema %}